<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 起始角度 -->
    <attr name="startAngle" format="float" />
    <!-- 跨越角度 -->
    <attr name="sweepAngle" format="float" />
    <!-- 弧形条背景宽度 -->
    <attr name="backgroundThickness" format="dimension" />
    <!-- 弧形条前景宽度 -->
    <attr name="foregroundThickness" format="dimension" />
    <!-- 弧形条背景颜色 -->
    <attr name="backgroundColor" format="reference|color" />
    <!-- 弧形条前景颜色 -->
    <attr name="foregroundColor" format="reference|color" />
    <!-- 最大刻度 -->
    <attr name="maxValue" format="integer" />
    <!-- 最小刻度 -->
    <attr name="minValue" format="integer" />
    <!-- 拖动球宽度 -->
    <attr name="thumbWidth" format="dimension" />
    <!-- 拖动球颜色 -->
    <attr name="thumbColor" format="reference|color" />
    <!-- 文字大小 -->
    <attr name="textSize" format="dimension" />
    <!-- 文字颜色 -->
    <attr name="textColor" format="reference|color" />

    <declare-styleable name="CircleProgressBar">
        <attr name="startAngle" />
        <attr name="sweepAngle" />
        <attr name="backgroundThickness" />
        <attr name="foregroundThickness" />
        <attr name="backgroundColor" />
        <attr name="foregroundColor" />
        <attr name="maxValue" />
        <attr name="minValue" />
        <attr name="thumbWidth" />
        <attr name="thumbColor" />
        <attr name="textSize" />
        <attr name="textColor" />
    </declare-styleable>
</resources>
